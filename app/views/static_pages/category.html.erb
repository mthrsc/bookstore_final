<p id="notice"><%= notice %></p> <div id="booksContainer">
 <h1><%= @catName %></h1>
<% @books.each do |book| %>
 <div class="bookhols">
<h1><%= book.title %></h1>
<%= link_to (image_tag book.image_url, :class => "bookholsIm"), book %> 
<p><%= book.description %></p>
<p><%= book.price %>
<br>
<%= book.genre %> <br>
</p>
<p>
<a href="/cart/<%= book.id %>" class="button">Add to Cart</a> <%= link_to "Show", book, :class => "button", :role => "button" %>
<% if session[:login] == 1 %>
<%= link_to "Edit", edit_book_path(book), :class => "button", :role => "button" %>
<%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" }, :class => "button", :role => "button" %>
<% end %>
</p> 
</div>
<% end %> 
<br>