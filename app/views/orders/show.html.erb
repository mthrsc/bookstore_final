<div id="booksContainer">
    <p id="notice"><%= notice %></p>
    <h1>Order Details</h1>
    <table id="customers">
        <tr>
            <td>Order date:</td>
            <td>Ordered By</td>
            <td>Order date:</td>
        </tr>
        <tr>
            <td><%= @order.order_date %></td>
            <td><%= @order.user %></td>
            <td><%= @order.status %></td>
        </tr>
        <tr>
            <td><%= link_to 'Edit', edit_order_path(@order), :class =>"button" %></td>
            <td><%= link_to 'Back', orders_path, :class =>"button" %></td>
        </tr>
    </table>
    <h2>Order Items</h2>
    <table id="customers">
        <% @orderbooks.each do |orderbook| %>
        <tr>
            <td><%= orderbook.created_at %></td>
            <td><%= orderbook.title %></td>
            <td><%= orderbook.order_id %></td>
        </tr>
        <% end %>
        <tr>
        </tr>
    </table>
</div>